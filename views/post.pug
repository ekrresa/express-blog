doctype html
html
  head
    meta(charset="utf-8")
    meta(http-equiv="X-UA-Compatible" content="IE=edge")
    title AgricVenturesNG
    meta(name="viewport" content="width=device-width, initial-scale=1")
    link(rel="stylesheet" media="screen" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css")
    link(rel="stylesheet", href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css")
    link(rel="stylesheet", href="/stylesheets/main.css")
    link(href="https://fonts.googleapis.com/css?family=Poppins:400,600,700"
      rel="stylesheet")
  body
    header.pb-5
      .container
        nav.navbar.navbar-expand-md.navbar-light
          a(class="navbar-brand" href="#") AgricVenturesNG
          button(class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation")
            span.navbar-toggler-icon
          .collapse.navbar-collapse#navbarNav
            ul.navbar-nav
              li.nav-item.active
                a(class="nav-link" href="/") Home 
                  span.sr-only (current)
              li.nav-item
                a(class="nav-link" href="#") Vacancies 
              li.nav-item
                a(class="nav-link" href="#") Events 
              li.nav-item
                a(class="nav-link" href="#") Admissions 
              li.nav-item
                a(class="nav-link" href="/about") About
              li.nav-item
                a(class="nav-link" href="/contact") Contact Us

          .d-flex.justify-content-end.contact
            ul.navbar-nav
              li.nav-item
                i.fa.fa-phone 
                span.ml-2 +2347036161822
              li.nav-item
                a(class="nav-link" href="#")
                  i.fa.fa-facebook-square
              li.nav-item
                a(class="nav-link" href="#")
                  i.fa.fa-twitter-square
              li.nav-item
                a(class="nav-link" href="#")
                  i.fa.fa-instagram

        .row.justify-content-center
          h1.site-header AgricVenturesNG

    section.container.mb-4
      .row
        .col-sm-12.col-md-8.border-right
          if post
            article
              h1.text-center=post.title
              p.text-center.text-muted.font-weight-light Posted in 
                a.text-dark(href=`/blog/posts/${post.category}`)= post.category 
                |  by #{post.author} on #{post.date}

              .row.justify-content-center.mb-3
                .col-sm-10
                  .post-image
                    img.img-fluid(src=post.image style="height: 400px")

              != post.content

          .row.mb-3
            .col-sm-12
              .bg-dark
                p.text-light AD SPACE
          
          .row.mb-3
            .col-sm-12
              ul.list-inline
                li.list-inline-item Share Post...
                li.list-inline-item
                  a(href="#") 
                    i.fa.fa-facebook-square
                li.list-inline-item
                  a(href="#") 
                    i.fa.fa-twitter-square
                li.list-inline-item
                  a(href="#") 
                    i.fa.fa-instagram
          
          .row.mb-3
            .col-sm-12
              h4.text-capitalize related posts

          .row.mb-3
            .col-xs-6.col-sm-3
              .card.shadow-sm.mb-3.bg-light.rounded
                .row
                  .col-sm-12
                    .pl-1.pt-1
                      img(src="/images/post-img.jpg" alt="image of post" class="img-fluid")
                  .col-sm-12
                    .card-body.pl-1
                      h6 Smallholder Farmers to enjoy Improved Livelihood — Ogbeh
            .col-xs-6.col-sm-3
              .card.shadow-sm.mb-3.bg-light.rounded
                .row
                  .col-sm-12
                    .pl-1.pt-1
                      img(src="/images/post-img.jpg" alt="image of post" class="img-fluid")
                  .col-sm-12
                    .card-body.pl-1
                      h6 Smallholder Farmers to enjoy Improved Livelihood — Ogbeh
            .col-sm-3
              .card.shadow-sm.mb-3.bg-light.rounded
                .row
                  .col-sm-12
                    .pl-1.pt-1
                      img(src="/images/post-img.jpg" alt="image of post" class="img-fluid")
                  .col-sm-12
                    .card-body.pl-1
                      h6 Smallholder Farmers to enjoy Improved Livelihood — Ogbeh
            .col-sm-3
              .card.shadow-sm.mb-3.bg-light.rounded
                .row
                  .col-sm-12
                    .pl-1.pt-1
                      img(src="/images/post-img.jpg" alt="image of post" class="img-fluid")
                  .col-sm-12
                    .card-body.pl-1
                      h6 Smallholder Farmers to enjoy Improved Livelihood — Ogbeh

        .col-sm-12.col-md-4
          include aside
            .row
              .col-sm-12
                h4 Subscribe To Our Newsletter
            
              .col-sm-12
                form(action="" method="" class="form-inline")
                  input(type="email" name="" class="form-control" placeholder="Enter Email...")
                  button(type="submit" class="btn ml-2") Subscribe

    footer.mt-4.pt-2
      .container
        .row
          .col-md-12
            h2 AgricVenturesNG
        .row
          .col-sm-12.col-md-5
            p.mb-3 AgricVenturesNG is a blog dedicated to bring the latest News and event on Agriculture happen around Nigeria.
            p 
              i.fa.fa-envelope-o
              span.ml-2
                a(href="mailto:kelvinekrresa@gmail.com") kelvinekrresa@gmail.com 
            p 
              i.fa.fa-phone 
              span.ml-2 +2347036161822
          .col-sm-12.col-md-3
            p
              a(href="#") Privacy Policy
            p 
              a(href="#") Terms &amp; Conditions 
          .col-sm-12.col-md-4
            ul.footer-nav
              li.nav-item
                a(href="#")
                  i.fa.fa-facebook-square
              li.nav-item
                a(href="#")
                  i.fa.fa-twitter-square
              li.nav-item
                a(href="#")
                  i.fa.fa-instagram      

        .row
          .col-sm-12.text-center
            p Copyright &copy; 2018. Built by Ochuko


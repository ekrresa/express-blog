doctype html
html
  head
    meta(charset="utf-8")
    meta(http-equiv="X-UA-Compatible" content="IE=edge")
    title AgricVenturesNG
    meta(name="viewport" content="width=device-width, initial-scale=1")
    link(rel="stylesheet" media="screen" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css")
    link(rel="stylesheet", href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css")
    link(rel="stylesheet", href="/stylesheets/main.css")
    link(href="https://fonts.googleapis.com/css?family=Poppins:400,600,700"
      rel="stylesheet")
  body
    header
      .container
        include partials/nav
        
        .row.justify-content-center
          h1.display-4.site-header AgricVenturesNG

        main.container
          .jumbotron
            p.lead AgricVenturesNG is a blog dedicated to bring the latest News and event on Agriculture happen around Nigeria.

    section.container.mb-4.p-2.shadow-sm
      .row.align-items-center
        .col-sm-12.col-md-6.d-flex.justify-content-center
          h3 Subscribe To Our Newsletter
      
        .col-sm-12.col-md-6.d-flex.justify-content-center
          form(action="" method="" class="form-inline")
            input(type="email" name="" class="form-control" placeholder="Enter Email...")
            button(type="submit" class="btn ml-2") Subscribe

    section.container
      .row
        .col-sm-12.col-md-8.border-right
          if post1
            each post in post1
              article
                .card.shadow-sm.mb-3.bg-light.rounded
                  .row.align-items-center
                    .col-sm-12.col-md-6
                      .pl-1.py-1
                        a.text-dark(href=`/blog/${post.category}/${post.url}`)
                          img(src=post.image alt="image of post")
                    .col-sm-12.col-md-6
                      .card-body.pl-1
                        a.text-uppercase(href=`/blog/posts/${post.category}`).card-subtitle.mb-2.text-muted #{post.category}
                        h4.card-title
                          a.text-dark(href=`/blog/${post.category}/${post.url}`)= post.title
                        a.text-dark(href=`/blog/${post.category}/${post.url}`)
                          p.card-subtitle.mb-2.text-muted!= post.summary

          .row.mb-3
              .col-sm-12
                .bg-dark
                  p.text-light AD SPACE

          if post2
            each post in post2
              article
                .card.shadow-sm.mb-3.bg-light.rounded
                  .row.align-items-center
                    .col-sm-12.col-md-6
                      .pl-1.py-1
                        a.text-dark(href=`/blog/${post.category}/${post.url}`)
                          img(src=post.image alt="image of post")
                    .col-sm-12.col-md-6
                      .card-body.pl-1
                        a.text-uppercase(href=`/blog/posts/${post.category}`).card-subtitle.mb-2.text-muted #{post.category}
                        h4.card-title
                          a.text-dark(href=`/blog/${post.category}/${post.url}`)= post.title
                        a.text-dark(href=`/blog/${post.category}/${post.url}`)
                          p.card-subtitle.mb-2.text-muted!= post.summary
          - let nextPage = Number(pageNumber + 1)
          .row
            if pageNumber > 1
              a.page-item.page-link(href=`/blog/${pageNumber-1}` style="margin-left: 0.9rem") 	&larr;  Previous

            a.page-item.page-link.ml-auto(href=`/blog/${nextPage}` style="margin-right: 0.9rem") Next 	&rarr;

        .col-sm-12.col-md-4
          include partials/aside

    include partials/footer
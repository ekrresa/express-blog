doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    meta(http-equiv="X-UA-Compatible", content="ie=edge")
    title AgricventuresNG - Admin Dashboard
    link(rel="stylesheet" media="screen" href="/stylesheets/bootstrap.min.css")
    link(rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css")
    link(rel="stylesheet" href="/stylesheets/admin.css")

  body#page-top
    nav.navbar.navbar-expand.navbar-dark.bg-dark.static-top
      a.navbar-brand.mr-1(href="#") AgricventuresNG
      button.btn.btn-link.btn-sm.text-white.order-1.order-sm-0#sidebarToggle(href="#"): i.fa.fa-bars

      // Navbar
      ul.navbar-nav.ml-auto
        li.nav-item.dropdown.no-arrow.mx-1
          a.nav-link.dropdown-toggle#messagesDropdown(href="#" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false")
            i.fa.fa-envelope.fa-fw
            span.badge.badge-danger 7
          .dropdown-menu.dropdown-menu-right(aria-labelledby="messagesDropdown")
            a.dropdown-item(href="#") Action
            .dropdown-divider
            a.dropdown-item(href="#") Something else here

        li.nav-item.dropdown.no-arrow
          a.nav-link.dropdown-toggle#userDropdown(href="#" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false")
            i.fa.fa-user-circle.fa-fw
          .dropdown-menu.dropdown-menu-right(aria-labelledby="userDropdown")
            a.dropdown-item(href="#") Settings
            a.dropdown-item(href="#") Activity Log
            .dropdown-divider
            a.dropdown-item(href="#" data-toggle="modal" data-target="#logoutModal") Logout

    #wrapper
      // Sidebar
      ul.sidebar.navbar-nav
        li.nav-item.active
          a.nav-link(href="admin.html") Dashboard
        li.nav-item.active
          a.nav-link(href="#") Create New Post
        li.nav-item.active
          a.nav-link(href="/admin/category") Add Category
        li.nav-item.active
          a.nav-link(href="#") Login
        li.nav-item.active
          a.nav-link(href="#") Register
        li.nav-item.active
          a.nav-link(href="#") Forgot Password

      block content

    <!-- Logout Modal -->
    .modal.fade.show#logoutModal(tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true")
      .modal-dialog(role="document")
        .modal-content
          .modal-header
            h5.modal-title#exampleModalLabel Ready to Leave?
            button.close(type="button" data-dismiss="modal" aria-label="Close")
              span(aria-hidden="true") Ã—
          .modal-body Select "Logout" below if you are ready to end your current session.
          .modal-footer
            button.btn.btn-secondary(type="button" data-dismiss="modal") Cancel
            a.btn.btn-primary(href="login.html") Logout

    <!-- Bootstrap core JavaScript -->
    script(src="/javascript/jquery.min.js")
    script(src="/javascript/bootstrap.bundle.min.js")

    <!-- Custom scripts for all pages -->
    script(src="/javascript/admin.min.js")

extends dashboard.pug

block content
  #content-wrapper
    .container-fluid

      //- <!-- Breadcrumbs -->
      ol.breadcrumb
        li.breadcrumb-item
          a(href="#") Dashboard
        li.breadcrumb-item.active Overview

      //- <!-- Icon Cards -->
      .row
        .col-xl-3.col-sm-6.mb-3
          .card.text-white.bg-primary.o-hidden.h-100
            .card-body
              .card-body-icon
                i.fa.fa-fw.fa-comments
              .mr-5= postCount 
              span Posts
            a.card-footer.text-white.clearfix.small.z-1(href="#")
              span.float-left View Details
              span.float-right
                i.fa.fa-angle-right
        
        .col-xl-3.col-sm-6.mb-3
          .card.text-white.bg-warning.o-hidden.h-100
            .card-body
              .card-body-icon
                i.fa.fa-fw.fa-list
              .mr-5 11 Subscribers!
            a.card-footer.text-white.clearfix.small.z-1(href="#")
              span.float-left View Details
              span.float-right
                i.fa.fa-angle-right
        
        .col-xl-3.col-sm-6.mb-3
          .card.text-white.bg-success.o-hidden.h-100
            .card-body
              .card-body-icon
                i.fa.fa-fw.fa-shopping-cart
              .mr-5= categoriesCount 
              span Categories!
            a.card-footer.text-white.clearfix.small.z-1(href="#")
              span.float-left View Details
              span.float-right
                i.fa.fa-angle-right

      //- <!-- DataTables -->
      .card.mb-3
        .card-header
          i.fa.fa-table
          span   All Posts
        .card-body
          .table-responsive
          - let serial = 1;
            if posts
              table.table.table-striped
                thead
                  tr
                    th(scope="col") #
                    th(scope="col") Title
                    th(scope="col") Category
                    th(scope="col") Published
                tbody
                  each post in posts
                    tr
                      th(scope="row")= serial++
                      td
                        a(href=`/blog/${post.category}/${post.url}`)= post.title
                      td= post.category
                      td= post.date
                      td 
                        a.btn.btn-warning(href="#") Edit
                      td
                        a.btn.btn-danger(href="#") Delete

        .card-footer.small.text-muted
          - let nextPage = Number(pageNumber + 1)
          .row
            if pageNumber > 1
              a.page-item.page-link(href=`/admin/${pageNumber-1}` style="margin-left: 0.9rem") 	&larr;  Previous

            a.page-item.page-link.ml-auto(href=`/admin/${nextPage}` style="margin-right: 0.9rem") Next 	&rarr;

    footer.sticky-footer
      .container.my-auto
        .copyright.text-center.my-auto
          span Copyright Â© Your Website 2018